<odoo>
    <data>
        <record id="real_estate_kanban" model="ir.ui.view">
            <field name="name">real_estate kanban</field>
            <field name="model">realestate.properties</field>
            <field name="arch" type="xml">
                <kanban default_order="name">
                    <field name="name" />
                    <field name="description" />
                    <field name="expected_price" />
                    <field name="available_from" />
                    <field name="status" />
                    <field name="photo" widget="image" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            <field name="name" />
                                        </li>
                                        <li> Description: <field name="description" />
                                        </li>
                                        <li> Statut: <field name="status" />
                                        </li>
                                        <li> Prix: <field name="expected_price" />
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>