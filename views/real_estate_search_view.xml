<odoo>
    <data>
        <record model="ir.ui.view" id="real_estate_search">
            <field name="name">real_estate search</field>
            <field name="model">realestate.properties</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="description" />

                    <field name="post_code" />
                    <field name="expected_price" />
                    <field name="bedrooms" />
                    <field name="facades" />
                    <field name="garden" />
                    <field name="garden_orientation" />

                    <field name="available_from" />
                    <field name="selling_price" />
                    <field name="living_area" />
                    <field name="garage" />
                    <field name="garden_area" />
                    <field name="status" />
                    <!-- Filter -->
                    <filter string='PropriÃ©tÃ©s disponibles' name='filter_by_properties'
                        domain="['|', ('status', '=', 'new'), ('status', '=', 'offer_received')]" />
                    <!-- Group By -->
                    <filter string='Code Postal' name='group_by_postcode'
                        context='{"group_by":"post_code"}' />
                    <filter string='Statut' name='group_by_status' context='{"group_by":"status"}' />
                </search>
            </field>
        </record>
    </data>
</odoo>